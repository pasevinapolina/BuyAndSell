<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/ActionThemeButton</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:buttonStyle">@style/ActionThemeButton</item>
    </style>

    <style name="LinkFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/yellow_orange</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionThemeButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/action_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
